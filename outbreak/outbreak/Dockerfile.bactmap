# 1. Start from the official nf-core/bactmap image
FROM nfcore/bactmap:latest

# 2. Install Nextflow (requires Java—which is already in the base image)
USER root
RUN curl -fsSL https://get.nextflow.io | bash \
 && mv nextflow /usr/local/bin/nextflow \
 && chmod +x /usr/local/bin/nextflow

# 3. (Optional) switch back to a non‑root user if the base image uses one
USER 1001

