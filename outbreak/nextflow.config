// ----------------------------------------------------------------------------
// Default parameters: all empty by default, so you *must* pass one of
// --bactmap / --parsnp / --all plus the required file paths.
// ----------------------------------------------------------------------------
params {
  // Which steps?
  bactmap = false
  parsnp  = false
  all     = false

  // Bactmap inputs
  bactmap_csv     = ''      // e.g. samplesheet.csv
  bactmap_ref     = ''      // e.g. reference.fa
  bactmap_profile = 'docker'
  bactmap_maxmem  = '15.GB'
  bactmap_docker_image = 'nfcore/bactmap:2.3.0'

  // Parsnp + Gubbins inputs
  parsnp_ref      = ''      // e.g. reference.fa
  parsnp_dir      = ''      // e.g. assemblies/*.fa
  parsnp_docker_image = 'staphb/gubbins:latest'
}

profiles {
  docker {
    docker.enabled = true
  }
  // “mac” is just a reminder: still launch under Rosetta:
  //    arch -x86_64 nextflow run . -profile mac,docker …
  mac { }
}

